<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:id="@+id/btnFirstButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Bundle"
        app:layout_constraintTop_toBottomOf="@+id/parent"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintBottom_toTopOf="@+id/parent"/>

    <Button
        android:id="@+id/btnOpenRetrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Retrofit "
        app:layout_constraintTop_toBottomOf="@+id/btnFirstButton"
        app:layout_constraintLeft_toLeftOf="@+id/btnFirstButton"/>
</android.support.constraint.ConstraintLayout>